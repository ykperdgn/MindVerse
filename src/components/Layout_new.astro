---
const { title } = Astro.props;
---

<html lang="tr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title || "MindVerse"}</title>
  <meta name="description" content="MindVerse - Çoklu niş bilgi portalı">
</head>
<body>
  <div class="min-h-screen flex flex-col">
    <header class="bg-blue-600 text-white p-4">
      <nav class="container mx-auto flex justify-between items-center">
        <h1 class="text-2xl font-bold">
          <a href="/" class="hover:text-blue-200 transition-colors">MindVerse</a>
        </h1>
        <div class="flex space-x-4">
          <a href="/" class="hover:text-blue-200 transition-colors">Ana Sayfa</a>
          <a href="/popular" class="hover:text-blue-200 transition-colors">🔥 Popüler</a>
          <a href="/categories" class="hover:text-blue-200 transition-colors">📁 Kategoriler</a>
        </div>
      </nav>
      <div class="my-4 flex justify-center">
        <div class="w-full max-w-md">
          <ins class="adsbygoogle"
            style="display: block"
            data-ad-client="ca-pub-xxxxxxxxxxxxxxxx"
            data-ad-slot="1234567890"
            data-ad-format="auto"
            data-full-width-responsive="true"></ins>
        </div>
      </div>
    </header>
    <main class="flex-grow p-4">
      <slot />
    </main>
    <footer class="bg-gray-800 text-white text-center p-4">
      <div class="container mx-auto">
        <div class="grid md:grid-cols-3 gap-4 mb-4">
          <div>
            <h3 class="font-bold mb-2">MindVerse</h3>
            <p class="text-sm text-gray-300">Çoklu niş bilgi portalı</p>
          </div>
          <div>
            <h3 class="font-bold mb-2">Hızlı Linkler</h3>
            <div class="text-sm space-y-1">
              <a href="/popular" class="block hover:text-blue-300">Popüler İçerikler</a>
              <a href="/categories" class="block hover:text-blue-300">Kategoriler</a>
              <a href="/sitemap" class="block hover:text-blue-300">Site Haritası</a>
            </div>
          </div>
          <div>
            <h3 class="font-bold mb-2">Sosyal Medya</h3>
            <div class="flex justify-center space-x-4">
              <a href="#" class="hover:text-blue-300">📘</a>
              <a href="#" class="hover:text-blue-300">🐦</a>
              <a href="#" class="hover:text-blue-300">📷</a>
            </div>
          </div>
        </div>
        <p class="text-sm">&copy; 2025 MindVerse. All rights reserved.</p>
      </div>
    </footer>
  </div>
</body>
</html>
