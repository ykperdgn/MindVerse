---
import SpeedInsights from "@vercel/speed-insights/astro";

const { title, description, keywords, image, canonicalUrl } = Astro.props;

// SEO meta verileri
const siteTitle = title ? `${title} | MindVerse` : "MindVerse - Çoklu Niş Bilgi Portalı";
const siteDescription = description || "Sağlık, aşk, tarih, psikoloji, uzay ve alıntılar kategorilerinde zengin içerikler. Güncel araştırmalar, uzman görüşleri ve pratik öneriler.";
const siteKeywords = keywords || "sağlık, aşk, tarih, psikoloji, uzay, alıntılar, bilgi, araştırma, uzman, rehber";
const siteImage = image || "https://www.mindversedaily.com/social-media/og-image.jpg";
const currentUrl = canonicalUrl || "https://www.mindversedaily.com";
---

<html lang="tr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

  <!-- SEO Meta Tags -->
  <title>{siteTitle}</title>
  <meta name="description" content={siteDescription}>
  <meta name="keywords" content={siteKeywords}>
  <meta name="author" content="MindVerse">
  <meta name="robots" content="index, follow">
  <link rel="canonical" href={currentUrl}>

  <!-- Google AdSense -->
  <meta name="google-adsense-account" content="ca-pub-3096725438789562">
  <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-3096725438789562" crossorigin="anonymous"></script>

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website">
  <meta property="og:url" content={currentUrl}>
  <meta property="og:title" content={siteTitle}>
  <meta property="og:description" content={siteDescription}>
  <meta property="og:image" content={siteImage}>
  <meta property="og:locale" content="tr_TR">
  <meta property="og:site_name" content="MindVerse">

  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image">
  <meta property="twitter:url" content={currentUrl}>
  <meta property="twitter:title" content={siteTitle}>
  <meta property="twitter:description" content={siteDescription}>
  <meta property="twitter:image" content={siteImage}>

  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <!-- Google Search Console (Doğrulama kodunu buraya ekleyin) -->
  <meta name="google-site-verification" content="google88e7e5bbe464e115.html" />

  <!-- Preconnect for performance -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://www.google-analytics.com">
  <link rel="preconnect" href="https://www.googletagmanager.com">

  <!-- Google Analytics (GA4) - Replace with your actual GA4 ID -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-XXXXXXXXXX"></script>
  <script is:inline>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'G-XXXXXXXXXX', {
      page_title: document.title,
      page_location: window.location.href,
      custom_map: {
        'custom_parameter_1': 'category',
        'custom_parameter_2': 'article_type'
      }
    });
  </script>
  <!-- JSON-LD Structured Data -->
  <script type="application/ld+json" is:inline>
    {
      "@context": "https://schema.org",
      "@type": "WebSite",
      "name": "MindVerse",
      "description": "Çoklu niş bilgi portalı - Sağlık, aşk, tarih, psikoloji, uzay ve alıntılar",
      "url": "https://www.mindversedaily.com",
      "publisher": {
        "@type": "Organization",
        "name": "MindVerse",
        "url": "https://www.mindversedaily.com"
      },
      "potentialAction": {
        "@type": "SearchAction",
        "target": "https://www.mindversedaily.com/search?q={search_term_string}",
        "query-input": "required name=search_term_string"
      }
    }
  </script>

  <link rel="stylesheet" href="/src/styles/global.css">
</head>
<body>
  <div class="min-h-screen flex flex-col">
    <header class="bg-white/95 backdrop-blur-md border-b border-gray-200/50 shadow-lg sticky top-0 z-50">
      <nav class="container mx-auto px-4 py-4 flex justify-between items-center">
        <div class="flex items-center">
          <span class="inline-flex items-center justify-center w-10 h-10 md:w-12 md:h-12 rounded-full bg-gradient-to-br from-blue-500 via-purple-500 to-pink-400 shadow-xl mr-2 md:mr-4 animate-gradient-move">
            <span class="text-2xl md:text-3xl animate-bounce">🌌</span>
          </span>
          <a href="/" class="text-2xl md:text-3xl font-extrabold bg-gradient-to-r from-blue-600 via-purple-500 to-pink-400 bg-clip-text text-transparent tracking-tight drop-shadow-lg hover:scale-105 transition-all animate-gradient-move">
            MindVerse
          </a>
        </div>
        <div class="hidden md:flex space-x-8 text-gray-700">
          <a href="/" class="flex items-center hover:text-blue-600 transition-all font-semibold hover:scale-105 px-3 py-2 rounded-full hover:bg-blue-50">
            <span class="mr-2">🏠</span>Ana Sayfa
          </a>
          <a href="/popular" class="flex items-center hover:text-orange-600 transition-all font-semibold hover:scale-105 px-3 py-2 rounded-full hover:bg-orange-50">
            <span class="mr-2">🔥</span>Popüler
          </a>
          <a href="/categories" class="flex items-center hover:text-purple-600 transition-all font-semibold hover:scale-105 px-3 py-2 rounded-full hover:bg-purple-50">
            <span class="mr-2">📁</span>Kategoriler
          </a>
          <a href="/astrology" class="flex items-center hover:text-pink-600 transition-all font-semibold hover:scale-105 px-3 py-2 rounded-full hover:bg-pink-50">
            <span class="mr-2">🔮</span>Astroloji
          </a>
          <a href="/en" class="flex items-center hover:text-green-600 transition-all font-semibold hover:scale-105 px-3 py-2 rounded-full hover:bg-green-50 border border-green-200">
            <span class="mr-2">🇺🇸</span>English
          </a>
        </div>
        <!-- Mobile menu button -->
        <div class="md:hidden">
          <button id="mobile-menu-button" class="p-2 rounded-lg bg-gradient-to-r from-blue-500 to-purple-600 text-white shadow-lg hover:from-blue-600 hover:to-purple-700 transition-all">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>
      </nav>

      <!-- Mobile menu dropdown -->
      <div id="mobile-menu" class="md:hidden hidden bg-white border-t border-gray-200 shadow-lg">
        <div class="container mx-auto px-4 py-4 space-y-2">
          <a href="/" class="flex items-center hover:text-blue-600 transition-all font-semibold hover:scale-105 px-3 py-3 rounded-lg hover:bg-blue-50 w-full">
            <span class="mr-3 text-xl">🏠</span>Ana Sayfa
          </a>
          <a href="/popular" class="flex items-center hover:text-orange-600 transition-all font-semibold hover:scale-105 px-3 py-3 rounded-lg hover:bg-orange-50 w-full">
            <span class="mr-3 text-xl">🔥</span>Popüler
          </a>
          <a href="/categories" class="flex items-center hover:text-purple-600 transition-all font-semibold hover:scale-105 px-3 py-3 rounded-lg hover:bg-purple-50 w-full">
            <span class="mr-3 text-xl">📁</span>Kategoriler
          </a>
          <a href="/astrology" class="flex items-center hover:text-pink-600 transition-all font-semibold hover:scale-105 px-3 py-3 rounded-lg hover:bg-pink-50 w-full">
            <span class="mr-3 text-xl">🔮</span>Astroloji
          </a>
          <a href="/en" class="flex items-center hover:text-green-600 transition-all font-semibold hover:scale-105 px-3 py-3 rounded-lg hover:bg-green-50 w-full border border-green-200">
            <span class="mr-3 text-xl">🇺🇸</span>English
          </a>
        </div>
      </div>

      <!-- AdSense Header Ad -->
      <div class="border-t border-gray-100 py-3 bg-gray-50">
        <div class="container mx-auto flex justify-center">
          <div class="w-full max-w-lg">
            <ins class="adsbygoogle"
              style="display: block"
              data-ad-client="ca-pub-3096725438789562"
              data-ad-slot="1234567890"
              data-ad-format="auto"
              data-full-width-responsive="true"></ins>
          </div>
        </div>
      </div>
    </header>
    <main class="flex-grow bg-white py-6">
      <div class="container mx-auto px-4">
        <slot />
      </div>
    </main>
    <footer class="bg-gradient-to-br from-gray-50 to-blue-50 text-gray-800 border-t border-gray-200 py-8">
      <div class="container mx-auto px-4">
        <div class="text-center mb-8">
          <div class="flex items-center justify-center mb-4">
            <span class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-gradient-to-br from-blue-500 via-purple-500 to-pink-400 shadow-lg mr-4 animate-gradient-move">
              <span class="text-3xl animate-bounce">🌌</span>
            </span>
            <h3 class="text-3xl font-bold bg-gradient-to-r from-blue-600 via-purple-500 to-pink-400 bg-clip-text text-transparent animate-gradient-move">MindVerse Daily</h3>
          </div>
          <p class="text-gray-600 text-lg max-w-2xl mx-auto">Bilginin sonsuz evrenini keşfedin. Kaliteli, araştırma temelli içeriklerle hayatınıza değer katın.</p>
        </div>

        <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-7 gap-4 mb-8">
          <a href="/health" class="group block bg-gradient-to-br from-green-50 to-emerald-100 rounded-2xl p-4 border border-green-200 hover:shadow-lg transition-all transform hover:scale-105">
            <div class="text-center">
              <div class="text-3xl mb-2 group-hover:scale-110 transition-transform">🏥</div>
              <span class="text-sm font-semibold text-green-800">Sağlık</span>
            </div>
          </a>

          <a href="/love" class="group block bg-gradient-to-br from-red-50 to-pink-100 rounded-2xl p-4 border border-red-200 hover:shadow-lg transition-all transform hover:scale-105">
            <div class="text-center">
              <div class="text-3xl mb-2 group-hover:scale-110 transition-transform">❤️</div>
              <span class="text-sm font-semibold text-red-800">Aşk</span>
            </div>
          </a>

          <a href="/history" class="group block bg-gradient-to-br from-yellow-50 to-amber-100 rounded-2xl p-4 border border-yellow-200 hover:shadow-lg transition-all transform hover:scale-105">
            <div class="text-center">
              <div class="text-3xl mb-2 group-hover:scale-110 transition-transform">📚</div>
              <span class="text-sm font-semibold text-yellow-800">Tarih</span>
            </div>
          </a>

          <a href="/psychology" class="group block bg-gradient-to-br from-purple-50 to-violet-100 rounded-2xl p-4 border border-purple-200 hover:shadow-lg transition-all transform hover:scale-105">
            <div class="text-center">
              <div class="text-3xl mb-2 group-hover:scale-110 transition-transform">🧠</div>
              <span class="text-sm font-semibold text-purple-800">Psikoloji</span>
            </div>
          </a>

          <a href="/space" class="group block bg-gradient-to-br from-blue-50 to-cyan-100 rounded-2xl p-4 border border-blue-200 hover:shadow-lg transition-all transform hover:scale-105">
            <div class="text-center">
              <div class="text-3xl mb-2 group-hover:scale-110 transition-transform">🚀</div>
              <span class="text-sm font-semibold text-blue-800">Uzay</span>
            </div>
          </a>

          <a href="/quotes" class="group block bg-gradient-to-br from-indigo-50 to-purple-100 rounded-2xl p-4 border border-indigo-200 hover:shadow-lg transition-all transform hover:scale-105">
            <div class="text-center">
              <div class="text-3xl mb-2 group-hover:scale-110 transition-transform">💭</div>
              <span class="text-sm font-semibold text-indigo-800">Alıntılar</span>
            </div>
          </a>

          <a href="/astrology" class="group block bg-gradient-to-br from-pink-50 to-rose-100 rounded-2xl p-4 border border-pink-200 hover:shadow-lg transition-all transform hover:scale-105">
            <div class="text-center">
              <div class="text-3xl mb-2 group-hover:scale-110 transition-transform">🔮</div>
              <span class="text-sm font-semibold text-pink-800">Astroloji</span>
            </div>
          </a>
        </div>

        <!-- Newsletter Signup Section -->
        <div class="bg-gradient-to-r from-blue-500 via-purple-500 to-pink-500 rounded-3xl p-8 text-white text-center mb-8">
          <div class="max-w-2xl mx-auto">
            <div class="text-5xl mb-4">📬</div>
            <h3 class="text-2xl font-bold mb-3">Stay Updated with MindVerse</h3>
            <p class="text-white/90 mb-6">Get the latest astrology insights, daily horoscopes, and exclusive content delivered to your inbox.</p>

            <form id="newsletter-form" class="flex flex-col sm:flex-row gap-3 max-w-md mx-auto">
              <input
                type="email"
                placeholder="Enter your email address"
                required
                class="flex-1 px-4 py-3 rounded-full text-gray-800 focus:outline-none focus:ring-2 focus:ring-white/50 transition-all"
                id="newsletter-email"
              />
              <button
                type="submit"
                class="bg-white text-purple-600 px-6 py-3 rounded-full font-semibold hover:bg-gray-100 transition-all transform hover:scale-105 shadow-lg"
              >
                Subscribe ✨
              </button>
            </form>

            <p class="text-xs text-white/70 mt-3">
              🔒 We respect your privacy. Unsubscribe at any time.
            </p>
          </div>
        </div>

        <div class="border-t border-gray-300 pt-6 text-center">
          <p class="text-sm text-gray-600 mb-2">
            © 2025 MindVerse Daily. Tüm hakları saklıdır.
          </p>
          <p class="text-xs text-gray-500">
            🌟 Kaliteli içeriklerle bilginin sonsuz evrenini keşfedin
          </p>
        </div>
      </div>
    </footer>
  </div>

  <!-- Back to Top Button -->
  <button
    id="back-to-top"
    class="fixed bottom-6 right-6 bg-gradient-to-r from-blue-500 to-purple-500 text-white p-3 rounded-full shadow-lg hover:shadow-xl transition-all transform hover:scale-110 z-50 opacity-0 invisible"
  >
    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
    </svg>
  </button>

  <script>
    // Mobile menu toggle functionality
    document.addEventListener('DOMContentLoaded', function() {
      const mobileMenuButton = document.getElementById('mobile-menu-button');
      const mobileMenu = document.getElementById('mobile-menu');

      if (mobileMenuButton && mobileMenu) {
        mobileMenuButton.addEventListener('click', function() {
          mobileMenu.classList.toggle('hidden');
        });

        // Close mobile menu when clicking outside
        document.addEventListener('click', function(e) {
          if (!mobileMenuButton.contains(e.target) && !mobileMenu.contains(e.target)) {
            mobileMenu.classList.add('hidden');
          }
        });
      }

      // Newsletter form functionality
      const newsletterForm = document.getElementById('newsletter-form');
      if (newsletterForm) {
        newsletterForm.addEventListener('submit', function(e) {
          e.preventDefault();
          const email = document.getElementById('newsletter-email').value;

          // Show success message
          const button = this.querySelector('button');
          const originalText = button.textContent;
          button.textContent = 'Subscribed! ✅';
          button.classList.add('bg-green-500', 'text-white');
          button.classList.remove('bg-white', 'text-purple-600');

          // Reset after 3 seconds
          setTimeout(() => {
            button.textContent = originalText;
            button.classList.remove('bg-green-500', 'text-white');
            button.classList.add('bg-white', 'text-purple-600');
            document.getElementById('newsletter-email').value = '';
          }, 3000);
          // Here you would typically send the email to your newsletter service
          console.log('Newsletter signup:', email);
        });
      }

      // Back to top functionality
      const backToTopButton = document.getElementById('back-to-top');

      if (backToTopButton) {
        // Show/hide button based on scroll position
        window.addEventListener('scroll', function() {
          if (window.pageYOffset > 300) {
            backToTopButton.classList.remove('opacity-0', 'invisible');
            backToTopButton.classList.add('opacity-100', 'visible');
          } else {
            backToTopButton.classList.add('opacity-0', 'invisible');
            backToTopButton.classList.remove('opacity-100', 'visible');
          }
        });

        // Smooth scroll to top when clicked
        backToTopButton.addEventListener('click', function() {
          window.scrollTo({
            top: 0,
            behavior: 'smooth'
          });
        });
      }
    });
  </script>
  <style>
    @keyframes gradient-move {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }
    .animate-gradient-move {
      background-size: 200% 200%;
      animation: gradient-move 5s ease-in-out infinite;
    }
  </style>

  <!-- Vercel Speed Insights -->
  <SpeedInsights />
</body>
</html>
