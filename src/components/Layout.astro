---
const { title, description, keywords, image, canonicalUrl } = Astro.props;

// SEO meta verileri
const siteTitle = title ? `${title} | MindVerse` : "MindVerse - Çoklu Niş Bilgi Portalı";
const siteDescription = description || "Sağlık, aşk, tarih, psikoloji, uzay ve alıntılar kategorilerinde zengin içerikler. Güncel araştırmalar, uzman görüşleri ve pratik öneriler.";
const siteKeywords = keywords || "sağlık, aşk, tarih, psikoloji, uzay, alıntılar, bilgi, araştırma, uzman, rehber";
const siteImage = image || "https://www.mindversedaily.com/social-media/og-image.jpg";
const currentUrl = canonicalUrl || Astro.url.href;
---

<html lang="tr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

  <!-- SEO Meta Tags -->
  <title>{siteTitle}</title>
  <meta name="description" content={siteDescription}>
  <meta name="keywords" content={siteKeywords}>
  <meta name="author" content="MindVerse">
  <meta name="robots" content="index, follow">
  <link rel="canonical" href={currentUrl}>

  <!-- Google AdSense -->
  <meta name="google-adsense-account" content="ca-pub-3096725438789562">
  <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-3096725438789562" crossorigin="anonymous"></script>

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website">
  <meta property="og:url" content={currentUrl}>
  <meta property="og:title" content={siteTitle}>
  <meta property="og:description" content={siteDescription}>
  <meta property="og:image" content={siteImage}>
  <meta property="og:locale" content="tr_TR">
  <meta property="og:site_name" content="MindVerse">

  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image">
  <meta property="twitter:url" content={currentUrl}>
  <meta property="twitter:title" content={siteTitle}>
  <meta property="twitter:description" content={siteDescription}>
  <meta property="twitter:image" content={siteImage}>

  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <!-- Google Search Console (Doğrulama kodunu buraya ekleyin) -->
  <meta name="google-site-verification" content="google88e7e5bbe464e115.html" />

  <!-- Preconnect for performance -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://www.google-analytics.com">
  <link rel="preconnect" href="https://www.googletagmanager.com">
  <!-- Google Analytics (GA4) - Active Configuration -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-MINDVERSE2025"></script>
  <script is:inline>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'G-MINDVERSE2025', {
      page_title: document.title,
      page_location: window.location.href,
      send_page_view: true,
      custom_map: {
        'content_category': 'category',
        'article_length': 'word_count'
      }
    });

    // Custom event tracking
    function trackContentView(category, title) {
      gtag('event', 'content_view', {
        'content_category': category,
        'content_title': title,
        'page_title': document.title
      });
    }
  </script>
  <!-- JSON-LD Structured Data -->
  <script type="application/ld+json" is:inline>
    {
      "@context": "https://schema.org",
      "@type": "WebSite",
      "name": "MindVerse",
      "description": "Çoklu niş bilgi portalı - Sağlık, aşk, tarih, psikoloji, uzay ve alıntılar",
      "url": "https://www.mindversedaily.com",
      "publisher": {
        "@type": "Organization",
        "name": "MindVerse",
        "url": "https://www.mindversedaily.com"
      },
      "potentialAction": {
        "@type": "SearchAction",
        "target": "https://www.mindversedaily.com/search?q={search_term_string}",
        "query-input": "required name=search_term_string"
      }
    }
  </script>

  <link rel="stylesheet" href="/src/styles/global.css">
</head>
<body>
  <div class="min-h-screen flex flex-col">    <header class="bg-white border-b border-gray-200 shadow-sm">
      <nav class="container mx-auto px-4 py-4 flex justify-between items-center">
        <h1 class="text-2xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
          <a href="/" class="hover:from-blue-700 hover:to-purple-700 transition-all">🌌 MindVerse</a>
        </h1>
        <div class="flex space-x-6 text-gray-700">
          <a href="/" class="hover:text-blue-600 transition-colors font-medium">🏠 Ana Sayfa</a>
          <a href="/popular" class="hover:text-blue-600 transition-colors font-medium">🔥 Popüler</a>
          <a href="/categories" class="hover:text-blue-600 transition-colors font-medium">📁 Kategoriler</a>
          <a href="/astrology" class="hover:text-blue-600 transition-colors font-medium">🔮 Astroloji</a>
        </div>
      </nav>

      <!-- AdSense Header Ad -->
      <div class="border-t border-gray-100 py-3 bg-gray-50">
        <div class="container mx-auto flex justify-center">
          <div class="w-full max-w-lg">
            <ins class="adsbygoogle"
              style="display: block"
              data-ad-client="ca-pub-3096725438789562"
              data-ad-slot="1234567890"
              data-ad-format="auto"
              data-full-width-responsive="true"></ins>
          </div>
        </div>
      </div>
    </header>    <main class="flex-grow bg-white py-6">
      <div class="container mx-auto px-4">
        <slot />
      </div>
    </main><footer class="bg-white text-gray-800 border-t border-gray-200 p-6">
      <div class="container mx-auto">
        <div class="grid md:grid-cols-2 gap-6 mb-6">
          <div>
            <h3 class="font-bold text-xl mb-3 text-blue-600">🌌 MindVerse Daily</h3>
            <p class="text-gray-600 mb-4">Bilginin sonsuz evrenini keşfedin. Kaliteli, araştırma temelli içeriklerle hayatınıza değer katın.</p>
            <div class="flex flex-wrap gap-2">
              <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm">🏥 Sağlık</span>
              <span class="bg-red-100 text-red-800 px-3 py-1 rounded-full text-sm">❤️ Aşk</span>
              <span class="bg-yellow-100 text-yellow-800 px-3 py-1 rounded-full text-sm">📚 Tarih</span>
              <span class="bg-purple-100 text-purple-800 px-3 py-1 rounded-full text-sm">🔮 Astroloji</span>
            </div>
          </div>
          <div>
            <h3 class="font-bold text-lg mb-3">📋 Hızlı Erişim</h3>
            <div class="grid grid-cols-2 gap-3 text-sm">
              <a href="/popular" class="block text-blue-600 hover:text-blue-800 transition-colors">🔥 Popüler İçerikler</a>
              <a href="/categories" class="block text-blue-600 hover:text-blue-800 transition-colors">📂 Tüm Kategoriler</a>
              <a href="/astrology" class="block text-blue-600 hover:text-blue-800 transition-colors">🔮 Astroloji</a>
              <a href="/contact" class="block text-blue-600 hover:text-blue-800 transition-colors">📧 İletişim</a>
              <a href="/sitemap" class="block text-blue-600 hover:text-blue-800 transition-colors">🗺️ Site Haritası</a>
              <a href="/admin/newsletter" class="block text-blue-600 hover:text-blue-800 transition-colors">📬 Bülten Yönetimi</a>
            </div>
          </div>
        </div>

        <div class="border-t border-gray-200 pt-4 text-center">
          <p class="text-sm text-gray-600">
            © 2025 MindVerse Daily. Tüm hakları saklıdır. |
            <a href="/contact" class="text-blue-600 hover:text-blue-800">Gizlilik Politikası</a> |
            <a href="/contact" class="text-blue-600 hover:text-blue-800">Kullanım Koşulları</a>
          </p>
          <p class="text-xs text-gray-500 mt-2">
            📧 Kaliteli içerikler için bültenimize katılın • 🔍 Günlük yeni bilgiler keşfedin
          </p>
        </div>
      </div>
    </footer>
  </div>
</body>
</html>
