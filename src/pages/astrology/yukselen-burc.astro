<script>
  document.getElementById('ascendant-calculator').addEventListener('submit', function(e) {
    e.preventDefault();
    
    const birthDate = document.getElementById('birth-date').value;
    const birthTime = document.getElementById('birth-time').value;
    const birthCity = document.getElementById('birth-city').value;
    
    if (!birthDate || !birthTime || !birthCity) {
      alert('Lütfen tüm alanları doldurun.');
      return;
    }
    
    // Basit yükselen burç hesaplama (gerçek hesaplama daha karmaşıktır)
    const ascendantSigns = [
      { sign: 'Koç', emoji: '♈', element: 'Ateş', quality: 'Kardinal' },
      { sign: 'Boğa', emoji: '♉', element: 'Toprak', quality: 'Sabit' },
      { sign: 'İkizler', emoji: '♊', element: 'Hava', quality: 'Değişken' },
      { sign: 'Yengeç', emoji: '♋', element: 'Su', quality: 'Kardinal' },
      { sign: 'Aslan', emoji: '♌', element: 'Ateş', quality: 'Sabit' },
      { sign: 'Başak', emoji: '♍', element: 'Toprak', quality: 'Değişken' },
      { sign: 'Terazi', emoji: '♎', element: 'Hava', quality: 'Kardinal' },
      { sign: 'Akrep', emoji: '♏', element: 'Su', quality: 'Sabit' },
      { sign: 'Yay', emoji: '♐', element: 'Ateş', quality: 'Değişken' },
      { sign: 'Oğlak', emoji: '♑', element: 'Toprak', quality: 'Kardinal' },
      { sign: 'Kova', emoji: '♒', element: 'Hava', quality: 'Sabit' },
      { sign: 'Balık', emoji: '♓', element: 'Su', quality: 'Değişken' }
    ];
    
    // Basit hesaplama (gerçek uygulamada ephemeris tabloları kullanılır)
    const hour = parseInt(birthTime.split(':')[0]);
    const ascendantIndex = Math.floor((hour + Math.random() * 2) / 2) % 12;
    const ascendant = ascendantSigns[ascendantIndex];
    
    // Sonucu göster
    document.getElementById('result-area').classList.remove('hidden');
    document.getElementById('info-area').classList.add('hidden');
    
    document.getElementById('ascendant-result').innerHTML = `
      <div class="bg-gradient-to-br from-purple-100 to-pink-100 rounded-3xl p-8 border border-purple-200">
        <div class="text-6xl mb-4">${ascendant.emoji}</div>
        <h3 class="text-3xl font-bold text-purple-800 mb-2">${ascendant.sign} Yükselen</h3>
        <div class="grid grid-cols-2 gap-4 mt-6 text-sm">
          <div class="bg-white/50 rounded-xl p-3">
            <strong>Element:</strong> ${ascendant.element}
          </div>
          <div class="bg-white/50 rounded-xl p-3">
            <strong>Kalite:</strong> ${ascendant.quality}
          </div>
        </div>
        <div class="mt-6 p-4 bg-white/70 rounded-2xl">
          <p class="text-gray-700 text-sm">
            <strong>Detaylı analiz:</strong> Yükselen ${ascendant.sign} burcunuz, kişiliğinizin dış dünyaya yansıyan 
            yüzünü temsil eder. Bu, insanların sizi ilk gördüklerindeki izlenimleridir.
          </p>
        </div>
        <button onclick="window.location.reload()" 
                class="mt-6 bg-gradient-to-r from-purple-500 to-pink-500 text-white px-8 py-3 rounded-full font-semibold hover:from-purple-600 hover:to-pink-600 transition-all">
          Yeni Hesaplama
        </button>
      </div>
    `;
    
    // Sayfayı sonuç alanına kaydır
    document.getElementById('result-area').scrollIntoView({ behavior: 'smooth' });
  });
</script>
