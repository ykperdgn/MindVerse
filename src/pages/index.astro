---
import Layout from '../components/Layout.astro';

const categories = [
  { name: 'Health', url: '/health', title: 'Sağlık', icon: '🏥' },
  { name: 'Love', url: '/love', title: 'Aşk & İlişkiler', icon: '❤️' },
  { name: 'History', url: '/history', title: 'Tarih', icon: '📚' },
  { name: 'Psychology', url: '/psychology', title: 'Psikoloji', icon: '🧠' },
  { name: 'Space', url: '/space', title: 'Uzay', icon: '🚀' },
  { name: 'Quotes', url: '/quotes', title: 'Alıntılar', icon: '💭' },
  { name: 'Astrology', url: '/astrology', title: 'Astroloji', icon: '🔮' },
  { name: 'Art', url: '/art', title: 'Sanat', icon: '🎨' },
  { name: 'Cinema', url: '/cinema', title: 'Sinema', icon: '🎬' },
  { name: 'Technology', url: '/technology', title: 'Teknoloji', icon: '💻' },
];
---

<Layout title="MindVerse - Çoklu Niş Bilgi Portalı">  <header class="relative flex flex-col items-center justify-center py-20 md:py-28 overflow-hidden">
    <div class="absolute inset-0 w-full h-full animate-gradient-move bg-gradient-to-br from-blue-100 via-pink-100 to-purple-100 opacity-70 blur-3xl z-0"></div>
    <div class="absolute inset-0 bg-gradient-to-br from-white/20 via-transparent to-white/20 z-1"></div>    <div class="relative z-10 flex flex-col items-center max-w-4xl mx-auto px-4 text-center">
      <span class="inline-flex items-center justify-center w-28 h-28 md:w-40 md:h-40 rounded-full animate-gradient-move bg-gradient-to-br from-blue-500 via-purple-500 to-pink-400 shadow-2xl mb-6 md:mb-8 border-4 border-white/90 backdrop-blur-sm">
        <span class="text-6xl md:text-8xl drop-shadow-lg">🌌</span>
      </span>

      <h1 class="text-5xl sm:text-6xl md:text-8xl lg:text-9xl font-extrabold bg-gradient-to-r from-blue-600 via-purple-500 to-pink-400 bg-clip-text text-transparent tracking-tight drop-shadow-2xl animate-gradient-move mb-4">
        MindVerse
      </h1>

      <div class="space-y-3 md:space-y-4">
        <p class="text-xl sm:text-2xl md:text-4xl font-bold text-gray-800 drop-shadow-sm">Bilginin Sonsuz Evrenini Keşfedin</p>
        <p class="text-base sm:text-lg md:text-xl text-gray-700 font-medium max-w-2xl mx-auto px-4">Kaliteli içerikler • Güncel bilgiler • Uzman tavsiyeleri • 7 farklı kategori</p>
        <div class="flex flex-wrap justify-center gap-2 mt-4 md:mt-6">
          <span class="bg-white/80 backdrop-blur-sm text-blue-700 px-3 py-2 md:px-4 md:py-2 rounded-full text-xs md:text-sm font-semibold shadow-lg">📚 118+ Makale</span>
          <span class="bg-white/80 backdrop-blur-sm text-purple-700 px-3 py-2 md:px-4 md:py-2 rounded-full text-xs md:text-sm font-semibold shadow-lg">🔮 51 Astroloji</span>
          <span class="bg-white/80 backdrop-blur-sm text-pink-700 px-3 py-2 md:px-4 md:py-2 rounded-full text-xs md:text-sm font-semibold shadow-lg">⭐ Premium Kalite</span>
        </div>
      </div>
    </div>
  </header>
  <main class="container mx-auto px-4 py-8 md:py-20">
    <!-- Popüler içerikler hızlı erişim -->
    <div class="text-center mb-8 md:mb-12">
      <a
        href="/popular"
        class="inline-flex items-center animate-gradient-move bg-gradient-to-r from-orange-400 via-pink-400 to-purple-400 text-white px-6 py-3 md:px-10 md:py-5 rounded-2xl font-bold shadow-2xl transition-all transform hover:scale-105 border-0 ring-2 ring-pink-200 hover:ring-purple-300 focus:outline-none focus:ring-4 focus:ring-blue-300 relative overflow-hidden pop-button text-sm md:text-base"
        style="background-size:200% 200%;"
      >
        <span class="mr-2 md:mr-3 text-xl md:text-2xl">🔥</span> Popüler İçerikler
        <svg class="w-5 h-5 md:w-6 md:h-6 ml-2 md:ml-3 animate-bounce-x" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
        <span class="absolute inset-0 pointer-events-none pop-glow"></span>
      </a>
    </div>

    <!-- AdSense ana sayfa reklam alanı -->
    <div class="flex justify-center mb-10">
      <div class="w-full max-w-lg">
        <ins class="adsbygoogle"
          style="display: block"
          data-ad-client="ca-pub-3096725438789562"
          data-ad-slot="1234567890"
          data-ad-format="auto"
          data-full-width-responsive="true"></ins>
      </div>
    </div>    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8 lg:gap-12">
      {categories.map(category => (
        <a
          href={category.url}
          class={`block rounded-3xl shadow-2xl p-6 md:p-8 lg:p-12 hover:shadow-3xl transition-all duration-500 transform hover:scale-[1.06] hover:-translate-y-2 font-semibold category-card-${category.name.toLowerCase()} group relative overflow-hidden backdrop-blur-sm border border-white/20`}
        >
          <div class="absolute inset-0 bg-gradient-to-br from-white/10 to-white/5 z-0"></div>
          <div class="relative z-10 flex flex-col items-center">
            <div class="text-5xl md:text-6xl lg:text-8xl mb-4 md:mb-6 lg:mb-8 group-hover:scale-125 transition-transform duration-500 drop-shadow-lg filter">{category.icon}</div>
            <h2 class="text-xl md:text-2xl lg:text-3xl font-bold mb-3 md:mb-4 lg:mb-6 text-gray-800 group-hover:text-gray-900 text-center">{category.title}</h2>
            <p class="text-gray-600 text-sm md:text-base lg:text-lg leading-relaxed text-center mb-4 md:mb-6 font-medium">
              {category.name === 'Health' && 'Sağlıklı yaşam ipuçları ve medikal bilgiler'}
              {category.name === 'Love' && 'İlişkiler, aşk ve duygusal bağlar hakkında'}
              {category.name === 'History' && 'Tarihi olaylar ve kişiler'}
              {category.name === 'Psychology' && 'İnsan davranışları ve zihin'}
              {category.name === 'Space' && 'Uzay bilimleri ve astronomi'}
              {category.name === 'Quotes' && 'İlham verici sözler ve alıntılar'}
              {category.name === 'Astrology' && 'Burç yorumları ve astroloji rehberleri'}            </p>
            <div class="mt-4 md:mt-6 inline-flex items-center bg-gradient-to-r from-blue-500 via-purple-600 to-pink-500 text-white px-6 py-3 md:px-8 md:py-4 rounded-full text-sm md:text-base font-bold shadow-xl group-hover:shadow-2xl transition-all duration-300 animate-gradient-move">
              <span>Keşfet</span>
              <svg class="w-4 h-4 md:w-5 md:h-5 ml-1 md:ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </div>
          </div>
        </a>
      ))}
    </div>

    <!-- Alt reklam alanı -->
    <div class="flex justify-center mt-12 md:mt-16">
      <div class="w-full max-w-lg px-4">
        <ins class="adsbygoogle"
          style="display: block"
          data-ad-client="ca-pub-3096725438789562"
          data-ad-slot="1234567890"
          data-ad-format="auto"
          data-full-width-responsive="true"></ins>
      </div>
    </div>
  </main>

  <style>    @keyframes gradient-move {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }
    .animate-gradient-move {
      background-size: 200% 200%;
      animation: gradient-move 6s ease-in-out infinite;
    }

    @keyframes float {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(-10px); }
    }

    @keyframes pulse-glow {
      0%, 100% { box-shadow: 0 0 20px rgba(59, 130, 246, 0.5); }
      50% { box-shadow: 0 0 40px rgba(147, 51, 234, 0.8), 0 0 60px rgba(236, 72, 153, 0.6); }
    }

    .pop-button .pop-glow {
      background: radial-gradient(circle, #fff7ed 0%, #fbbf24 40%, transparent 80%);
      opacity: 0.3;
      filter: blur(15px);
      z-index: 1;
      transition: all 0.3s ease;
    }
    .pop-button:hover .pop-glow {
      opacity: 0.7;
      filter: blur(20px);
    }

    @keyframes bounce-x {
      0%, 100% { transform: translateX(0); }
      50% { transform: translateX(10px); }
    }
    .animate-bounce-x {
      animation: bounce-x 1.5s infinite;
    }

    /* Enhanced Category Cards */
    .category-card-health {
      background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 50%, #bbf7d0 100%);
      box-shadow: 0 20px 40px rgba(34, 197, 94, 0.15), 0 10px 20px rgba(34, 197, 94, 0.1);
    }
    .category-card-health:hover {
      box-shadow: 0 30px 60px rgba(34, 197, 94, 0.25), 0 15px 30px rgba(34, 197, 94, 0.15);
    }

    .category-card-love {
      background: linear-gradient(135deg, #fdf2f8 0%, #fce7f3 50%, #fbcfe8 100%);
      box-shadow: 0 20px 40px rgba(236, 72, 153, 0.15), 0 10px 20px rgba(236, 72, 153, 0.1);
    }
    .category-card-love:hover {
      box-shadow: 0 30px 60px rgba(236, 72, 153, 0.25), 0 15px 30px rgba(236, 72, 153, 0.15);
    }

    .category-card-history {
      background: linear-gradient(135deg, #fffbeb 0%, #fef3c7 50%, #fde68a 100%);
      box-shadow: 0 20px 40px rgba(245, 158, 11, 0.15), 0 10px 20px rgba(245, 158, 11, 0.1);
    }
    .category-card-history:hover {
      box-shadow: 0 30px 60px rgba(245, 158, 11, 0.25), 0 15px 30px rgba(245, 158, 11, 0.15);
    }

    .category-card-psychology {
      background: linear-gradient(135deg, #f5f3ff 0%, #ede9fe 50%, #ddd6fe 100%);
      box-shadow: 0 20px 40px rgba(139, 92, 246, 0.15), 0 10px 20px rgba(139, 92, 246, 0.1);
    }
    .category-card-psychology:hover {
      box-shadow: 0 30px 60px rgba(139, 92, 246, 0.25), 0 15px 30px rgba(139, 92, 246, 0.15);
    }

    .category-card-space {
      background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 50%, #bae6fd 100%);
      box-shadow: 0 20px 40px rgba(14, 165, 233, 0.15), 0 10px 20px rgba(14, 165, 233, 0.1);
    }
    .category-card-space:hover {
      box-shadow: 0 30px 60px rgba(14, 165, 233, 0.25), 0 15px 30px rgba(14, 165, 233, 0.15);
    }

    .category-card-quotes {
      background: linear-gradient(135deg, #faf5ff 0%, #f3e8ff 50%, #e9d5ff 100%);
      box-shadow: 0 20px 40px rgba(168, 85, 247, 0.15), 0 10px 20px rgba(168, 85, 247, 0.1);
    }
    .category-card-quotes:hover {
      box-shadow: 0 30px 60px rgba(168, 85, 247, 0.25), 0 15px 30px rgba(168, 85, 247, 0.15);
    }

    .category-card-astrology {
      background: linear-gradient(135deg, #fefce8 0%, #fef3c7 50%, #fde047 100%);
      box-shadow: 0 20px 40px rgba(234, 179, 8, 0.15), 0 10px 20px rgba(234, 179, 8, 0.1);
    }
    .category-card-astrology:hover {
      box-shadow: 0 30px 60px rgba(234, 179, 8, 0.25), 0 15px 30px rgba(234, 179, 8, 0.15);
    }

    /* Enhanced shadow utilities */
    .shadow-3xl {
      box-shadow: 0 35px 60px -12px rgba(0, 0, 0, 0.25);
    }

    /* Backdrop blur enhancement */
    @supports (backdrop-filter: blur(10px)) {
      .backdrop-blur-sm {
        backdrop-filter: blur(4px);
      }
    }
  </style>
</Layout>
