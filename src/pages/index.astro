---
import Layout from '../components/Layout.astro';

const categories = [
  { name: 'Health', url: '/health', title: 'Sağlık', icon: '🏥' },
  { name: 'Love', url: '/love', title: 'Aşk & İlişkiler', icon: '❤️' },
  { name: 'History', url: '/history', title: 'Tarih', icon: '📚' },
  { name: 'Psychology', url: '/psychology', title: 'Psikoloji', icon: '🧠' },
  { name: 'Space', url: '/space', title: 'Uzay', icon: '🚀' },
  { name: 'Quotes', url: '/quotes', title: 'Alıntılar', icon: '💭' },
  { name: 'Astrology', url: '/astrology', title: 'Astroloji', icon: '🔮' },
];
---

<Layout title="MindVerse - Çoklu Niş Bilgi Portalı">
  <header class="text-center py-10">
    <div class="mx-auto flex flex-col items-center justify-center">
      <span class="inline-flex items-center justify-center w-20 h-20 rounded-full animate-gradient-move bg-gradient-to-br from-blue-500 via-purple-500 to-pink-400 shadow-xl mb-4">
        <span class="text-5xl">🌌</span>
      </span>
      <h1 class="text-5xl font-extrabold bg-gradient-to-r from-blue-600 via-purple-500 to-pink-400 bg-clip-text text-transparent tracking-tight drop-shadow-sm animate-gradient-move">
        MindVerse
      </h1>
      <p class="text-xl mb-2 font-medium text-gray-800">Bilginin sonsuz evrenini keşfedin</p>
      <p class="text-lg opacity-90 font-medium text-gray-700">Zengin içerikler • Güncel bilgiler • Uzman tavsiyeleri</p>
    </div>
  </header>

  <main class="container mx-auto px-4 py-8">
    <!-- Popüler içerikler hızlı erişim -->
    <div class="text-center mb-8">
      <a
        href="/popular"
        class="inline-flex items-center bg-gradient-to-r from-orange-500 to-red-500 text-white px-8 py-4 rounded-lg font-semibold hover:from-orange-600 hover:to-red-600 transition-all transform hover:scale-105 shadow-lg"
      >
        🔥 Popüler İçerikler
        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </a>
    </div>    <!-- AdSense ana sayfa reklam alanı -->
    <div class="flex justify-center mb-8">
      <div class="w-full max-w-lg">
        <ins class="adsbygoogle"
          style="display: block"
          data-ad-client="ca-pub-3096725438789562"
          data-ad-slot="1234567890"
          data-ad-format="auto"
          data-full-width-responsive="true"></ins>
      </div>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {categories.map(category => (
        <a
          href={category.url}
          class="block bg-white rounded-xl shadow-lg p-6 hover:shadow-xl transition-all transform hover:scale-105 border-l-4 border-blue-500"
        >
          <div class="text-center">
            <div class="text-4xl mb-4">{category.icon}</div>
            <h2 class="text-xl font-bold mb-2 text-gray-800">{category.title}</h2>            <p class="text-gray-600 text-sm">
              {category.name === 'Health' && 'Sağlıklı yaşam ipuçları ve medikal bilgiler'}
              {category.name === 'Love' && 'İlişkiler, aşk ve duygusal bağlar hakkında'}
              {category.name === 'History' && 'Tarihi olaylar ve kişiler'}
              {category.name === 'Psychology' && 'İnsan davranışları ve zihin'}
              {category.name === 'Space' && 'Uzay bilimleri ve astronomi'}
              {category.name === 'Quotes' && 'İlham verici sözler ve alıntılar'}
              {category.name === 'Astrology' && 'Burç yorumları ve astroloji rehberleri'}
            </p>
            <div class="mt-4 inline-block bg-blue-600 text-white px-4 py-2 rounded text-sm">
              Keşfet →
            </div>
          </div>
        </a>
      ))}
    </div>    <!-- Alt reklam alanı -->
    <div class="flex justify-center mt-12">
      <div class="w-full max-w-lg">
        <ins class="adsbygoogle"
          style="display: block"
          data-ad-client="ca-pub-3096725438789562"
          data-ad-slot="1234567890"
          data-ad-format="auto"
          data-full-width-responsive="true"></ins>
      </div>
    </div>
  </main>
  <style>
    @keyframes gradient-move {
      0% {
        background-position: 0% 50%;
      }
      50% {
        background-position: 100% 50%;
      }
      100% {
        background-position: 0% 50%;
      }
    }
    .animate-gradient-move {
      background-size: 200% 200%;
      animation: gradient-move 5s ease-in-out infinite;
    }
  </style>
</Layout>
