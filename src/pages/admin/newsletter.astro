---
// Newsletter Admin Paneli
// Basit admin paneli - newsletter abonelerini yÃ¶netmek iÃ§in
---

<html lang="tr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Newsletter Admin - MindVerse</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen">
  <div class="container mx-auto px-4 py-8">
    <div class="bg-white rounded-lg shadow-lg p-6">
      <h1 class="text-3xl font-bold mb-6 text-gray-800">ðŸ“§ Newsletter YÃ¶netimi</h1>

      <!-- Ä°statistikler -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
          <div class="flex items-center">
            <span class="text-2xl mr-3">ðŸ“Š</span>
            <div>
              <h3 class="font-semibold text-blue-800">Toplam Abone</h3>
              <p class="text-2xl font-bold text-blue-600" id="total-subscribers">0</p>
            </div>
          </div>
        </div>

        <div class="bg-green-50 border border-green-200 rounded-lg p-4">
          <div class="flex items-center">
            <span class="text-2xl mr-3">ðŸ“ˆ</span>
            <div>
              <h3 class="font-semibold text-green-800">Bu Hafta</h3>
              <p class="text-2xl font-bold text-green-600" id="week-subscribers">0</p>
            </div>
          </div>
        </div>

        <div class="bg-purple-50 border border-purple-200 rounded-lg p-4">
          <div class="flex items-center">
            <span class="text-2xl mr-3">ðŸ“…</span>
            <div>
              <h3 class="font-semibold text-purple-800">BugÃ¼n</h3>
              <p class="text-2xl font-bold text-purple-600" id="today-subscribers">0</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Abone Listesi -->
      <div class="mb-8">
        <h2 class="text-xl font-semibold mb-4">Abone Listesi</h2>
        <div class="overflow-x-auto">
          <table class="w-full bg-white border border-gray-200 rounded-lg">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">E-posta</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">KayÄ±t Tarihi</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ä°ÅŸlemler</th>
              </tr>
            </thead>
            <tbody id="subscribers-table" class="divide-y divide-gray-200">
              <!-- JavaScript ile doldurulacak -->
            </tbody>
          </table>
        </div>
      </div>

      <!-- Export BÃ¶lÃ¼mÃ¼ -->
      <div class="bg-gray-50 border border-gray-200 rounded-lg p-4">
        <h3 class="font-semibold mb-3">ðŸ“¤ DÄ±ÅŸa Aktar</h3>
        <div class="flex gap-3">
          <button
            onclick="exportToCSV()"
            class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition-colors"
          >
            CSV Olarak Ä°ndir
          </button>

          <button
            onclick="exportToJSON()"
            class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 transition-colors"
          >
            JSON Olarak Ä°ndir
          </button>

          <button
            onclick="generateMailchimpFormat()"
            class="bg-purple-600 text-white px-4 py-2 rounded hover:bg-purple-700 transition-colors"
          >
            Mailchimp Format
          </button>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Newsletter verilerini yÃ¼kle
    function loadSubscribers() {
      const subscribers = JSON.parse(localStorage.getItem('newsletter_subscribers') || '[]');

      // Ä°statistikleri gÃ¼ncelle
      document.getElementById('total-subscribers').textContent = subscribers.length;

      // Bu hafta ve bugÃ¼n hesapla (simÃ¼lasyon)
      const weekAgo = new Date();
      weekAgo.setDate(weekAgo.getDate() - 7);

      const today = new Date().toDateString();

      let weekCount = 0;
      let todayCount = 0;

      subscribers.forEach(email => {
        // Basit simÃ¼lasyon - gerÃ§ek uygulamada timestamp tutulur
        if (Math.random() > 0.7) weekCount++;
        if (Math.random() > 0.9) todayCount++;
      });

      document.getElementById('week-subscribers').textContent = weekCount;
      document.getElementById('today-subscribers').textContent = todayCount;

      // Tablo doldur
      const tableBody = document.getElementById('subscribers-table');
      tableBody.innerHTML = '';

      if (subscribers.length === 0) {
        tableBody.innerHTML = `
          <tr>
            <td colspan="3" class="px-4 py-3 text-center text-gray-500">
              HenÃ¼z abone bulunmuyor
            </td>
          </tr>
        `;
        return;
      }

      subscribers.forEach((email, index) => {
        const row = document.createElement('tr');
        row.innerHTML = `
          <td class="px-4 py-3 text-sm text-gray-900">${email}</td>
          <td class="px-4 py-3 text-sm text-gray-500">${new Date().toLocaleDateString('tr-TR')}</td>
          <td class="px-4 py-3 text-sm">
            <button
              onclick="removeSubscriber(${index})"
              class="text-red-600 hover:text-red-800 text-sm"
            >
              KaldÄ±r
            </button>
          </td>
        `;
        tableBody.appendChild(row);
      });
    }

    // Abone kaldÄ±r
    function removeSubscriber(index) {
      if (confirm('Bu aboneyi listeden kaldÄ±rmak istediÄŸinizden emin misiniz?')) {
        const subscribers = JSON.parse(localStorage.getItem('newsletter_subscribers') || '[]');
        subscribers.splice(index, 1);
        localStorage.setItem('newsletter_subscribers', JSON.stringify(subscribers));
        loadSubscribers();
      }
    }

    // CSV export
    function exportToCSV() {
      const subscribers = JSON.parse(localStorage.getItem('newsletter_subscribers') || '[]');

      if (subscribers.length === 0) {
        alert('Export edilecek abone bulunmuyor.');
        return;
      }

      let csv = 'Email,Subscription Date\n';
      subscribers.forEach(email => {
        csv += `${email},${new Date().toLocaleDateString('tr-TR')}\n`;
      });

      downloadFile(csv, 'mindverse-subscribers.csv', 'text/csv');
    }

    // JSON export
    function exportToJSON() {
      const subscribers = JSON.parse(localStorage.getItem('newsletter_subscribers') || '[]');

      if (subscribers.length === 0) {
        alert('Export edilecek abone bulunmuyor.');
        return;
      }

      const jsonData = JSON.stringify({
        export_date: new Date().toISOString(),
        total_subscribers: subscribers.length,
        subscribers: subscribers.map(email => ({
          email: email,
          subscription_date: new Date().toISOString(),
          status: 'active'
        }))
      }, null, 2);

      downloadFile(jsonData, 'mindverse-subscribers.json', 'application/json');
    }

    // Mailchimp format
    function generateMailchimpFormat() {
      const subscribers = JSON.parse(localStorage.getItem('newsletter_subscribers') || '[]');

      if (subscribers.length === 0) {
        alert('Export edilecek abone bulunmuyor.');
        return;
      }

      let mailchimpCSV = 'Email Address,First Name,Last Name,Tags\n';
      subscribers.forEach(email => {
        mailchimpCSV += `${email},,,MindVerse\n`;
      });

      downloadFile(mailchimpCSV, 'mindverse-mailchimp-import.csv', 'text/csv');
    }

    // Dosya indirme helper
    function downloadFile(content, filename, contentType) {
      const blob = new Blob([content], { type: contentType });
      const url = window.URL.createObjectURL(blob);
      const a = document.createElement('a');
      a.href = url;
      a.download = filename;
      document.body.appendChild(a);
      a.click();
      document.body.removeChild(a);
      window.URL.revokeObjectURL(url);
    }

    // Sayfa yÃ¼klendiÄŸinde verileri yÃ¼kle
    document.addEventListener('DOMContentLoaded', loadSubscribers);

    // 30 saniyede bir gÃ¼ncelle
    setInterval(loadSubscribers, 30000);
  </script>
</body>
</html>
