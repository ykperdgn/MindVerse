  psychology: { name: 'Psychology', icon: 'ğŸ§ ', description: 'Human behavior and mind' },
  space: { name: 'Space', icon: 'ğŸš€', description: 'Space science and astronomy' },
  quotes: { name: 'Quotes', icon: 'ğŸ’­', description: 'Inspiring words and quotes' },
  astrology: { name: 'Astrology', icon: 'ğŸ”®', description: 'Horoscopes and astrology guides' },
  art: { name: 'Art', icon: 'ğŸ¨', description: 'Art history and contemporary art movements' },
  cinema: { name: 'Cinema', icon: 'ğŸ¬', description: 'Movies, film reviews and cinema culture' },
  technology: { name: 'Technology', icon: 'ğŸ’»', description: 'Latest technology trends and innovations' }
};

const info = categoryInfo[category];
---

<Layout
  title={`${info.name} - MindVerse English`}
  description={`${info.description}. English content about ${category}.`}
  keywords={`${category}, English, ${info.name.toLowerCase()}, articles, content`}
>  <div class="container mx-auto px-4 py-8">

    <!-- Navigation Breadcrumb -->
