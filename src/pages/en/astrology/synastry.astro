        { sign: 'Sagittarius', start: { month: 11, day: 22 }, end: { month: 12, day: 21 } }
      ];

      for (const signData of signs) {
        if (signData.sign === 'Capricorn') {
          if ((month === 12 && day >= 22) || (month === 1 && day <= 19)) {
            return signData.sign;
          }
        } else {
          if (
            (month === signData.start.month && day >= signData.start.day) ||
            (month === signData.end.month && day <= signData.end.day)
          ) {
            return signData.sign;
          }
        }
      }

      return 'Aries'; // fallback
    }

    calculateMoonSign(birthDate) {
      // Simplified moon sign calculation (in reality, requires ephemeris data)
      const date = new Date(birthDate);
      const dayOfYear = Math.floor((date - new Date(date.getFullYear(), 0, 0)) / 86400000);
      const moonIndex = Math.floor((dayOfYear * 13) / 365) % 12;
      return this.zodiacSigns[moonIndex];
    }

    calculateVenusSign(birthDate) {
      // Simplified Venus sign calculation
      const date = new Date(birthDate);
      const dayOfYear = Math.floor((date - new Date(date.getFullYear(), 0, 0)) / 86400000);
      const venusIndex = Math.floor((dayOfYear + 45) / 30) % 12;
      return this.zodiacSigns[venusIndex];
    }

    calculateCompatibilityScore(sign1, sign2) {
      const compatibility1 = this.compatibility[sign1];

      if (compatibility1.high.includes(sign2)) return 90 + Math.floor(Math.random() * 10);
      if (compatibility1.medium.includes(sign2)) return 70 + Math.floor(Math.random() * 15);
      return 40 + Math.floor(Math.random() * 25);
    }

    analyzeSynastry(person1, person2) {
      // Calculate zodiac signs
      const person1Signs = {
        sun: this.getZodiacSign(person1.date),
        moon: this.calculateMoonSign(person1.date),
        venus: this.calculateVenusSign(person1.date)
      };

      const person2Signs = {
        sun: this.getZodiacSign(person2.date),
        moon: this.calculateMoonSign(person2.date),
        venus: this.calculateVenusSign(person2.date)
      };

      // Calculate compatibility scores
      const sunCompatibility = this.calculateCompatibilityScore(person1Signs.sun, person2Signs.sun);
      const moonCompatibility = this.calculateCompatibilityScore(person1Signs.moon, person2Signs.moon);
      const venusCompatibility = this.calculateCompatibilityScore(person1Signs.venus, person2Signs.venus);

      // Calculate specific area scores
      const loveScore = Math.round((sunCompatibility + venusCompatibility) / 2);
      const communicationScore = Math.round((sunCompatibility + moonCompatibility) / 2);
      const emotionalScore = Math.round((moonCompatibility * 0.7) + (venusCompatibility * 0.3));
      const longtermScore = Math.round((sunCompatibility + moonCompatibility + venusCompatibility) / 3);

      // Overall score
      const overallScore = Math.round((loveScore + communicationScore + emotionalScore + longtermScore) / 4);

      return {
        person1Signs,
        person2Signs,
        scores: {
          overall: overallScore,
          love: loveScore,
          communication: communicationScore,
          emotional: emotionalScore,
          longterm: longtermScore
        },
        analysis: this.generateAnalysis(person1Signs, person2Signs, overallScore)
      };
    }

    generateAnalysis(signs1, signs2, overallScore) {
      const compatibilityLevel = overallScore >= 80 ? 'Highly Compatible' :
                                overallScore >= 60 ? 'Moderately Compatible' : 'Challenging but Workable';

      const strengths = [
        'Strong emotional understanding between your core personalities',
        'Shared values and life perspectives create harmony',
        'Natural ability to support each other\'s goals',
        'Complementary communication styles enhance connection',
        'Mutual respect for individual differences',
        'Strong foundation for long-term commitment'
      ];

      const challenges = [
        'Different approaches to expressing emotions may cause misunderstandings',
        'Varying communication styles require patience and adaptation',
        'Individual needs for independence vs. togetherness need balance',
        'Different conflict resolution styles may create friction',
        'Varying life paces may require compromise',
        'Different ways of showing love need mutual understanding'
      ];

      const growth = [
        'Learning from each other\'s unique perspectives',
        'Developing patience and understanding in communication',
        'Building stronger emotional intimacy through vulnerability',
        'Creating shared goals while honoring individual dreams',
        'Practicing active listening and empathy',
        'Celebrating differences as strengths rather than obstacles'
      ];

      return {
        compatibilityLevel,
        quickSummary: this.generateQuickSummary(signs1, signs2, overallScore),
        strengths: strengths.slice(0, 4),
        challenges: challenges.slice(0, 4),
        growth: growth.slice(0, 4),
        advice: {
          communication: 'Focus on understanding each other\'s communication style and practice active listening.',
          conflict: 'Address disagreements with patience and seek win-win solutions that honor both perspectives.',
          success: 'Build on your strengths while working together to overcome challenges with love and understanding.'
        }
      };
    }

    generateQuickSummary(signs1, signs2, score) {
      if (score >= 80) {
        return 'You share excellent compatibility with strong potential for a lasting, harmonious relationship built on mutual understanding and shared values.';
      } else if (score >= 60) {
        return 'You have good compatibility with some areas requiring attention. With effort and understanding, you can build a strong, fulfilling relationship.';
      } else {
        return 'Your relationship may face challenges, but with commitment, patience, and mutual respect, you can create a unique and meaningful connection.';
      }
    }
  }

