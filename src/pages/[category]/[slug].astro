      </div>
      <h1 class="article-title">{post.data.title}</h1>
      <div class="article-meta">
        <span>
          ğŸ“… {new Date(post.data.date).toLocaleDateString('tr-TR')}
        </span>
        <span>
          ğŸ‘ï¸ {post.data.views || 0} gÃ¶rÃ¼ntÃ¼lenme
        </span>
        <span id="read-time">
          â±ï¸ ~3 dakika okuma
        </span>
      </div>
      {post.data.summary && (
        <p class="text-xl text-gray-600 leading-relaxed mt-4 font-light italic">
          {post.data.summary}
        </p>
      )}
      {post.data.tags && post.data.tags.length > 0 && (
