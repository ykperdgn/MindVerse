    />

    <!-- Yorum sistemi -->
    <div class="border-t pt-8">
      <h3 class="text-2xl font-bold mb-6">ğŸ’¬ Yorumlar</h3>

      <!-- Yorum formu -->
      <form id="comment-form" class="bg-gray-50 p-6 rounded-lg mb-8">
        <div class="grid md:grid-cols-2 gap-4 mb-4">
          <input
            type="text"
            id="comment-name"
