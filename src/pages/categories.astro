---
import Layout from '../components/Layout.astro';

const categories = ['health', 'love', 'history', 'psychology', 'space', 'quotes', 'astrology', 'art', 'cinema', 'technology'];

const categoryInfo = {
  health: { name: 'Sağlık', icon: '🏥', color: 'green' },
  love: { name: 'Aşk & İlişkiler', icon: '❤️', color: 'red' },
  history: { name: 'Tarih', icon: '📚', color: 'yellow' },
  psychology: { name: 'Psikoloji', icon: '🧠', color: 'purple' },
  space: { name: 'Uzay', icon: '🚀', color: 'blue' },
  quotes: { name: 'Alıntılar', icon: '💭', color: 'gray' },
  astrology: { name: 'Astroloji', icon: '🔮', color: 'indigo' },
  art: { name: 'Sanat', icon: '🎨', color: 'pink' },
  cinema: { name: 'Sinema', icon: '🎬', color: 'orange' },
  technology: { name: 'Teknoloji', icon: '💻', color: 'teal' }
};
---

<Layout title="Tüm Kategoriler">
  <div class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold text-center mb-8">📁 Tüm Kategoriler</h1>
      <!-- Reklam alanı -->
    <div class="flex justify-center mb-8">
      <div class="w-full max-w-lg">
        <ins class="adsbygoogle"
          style="display: block"
          data-ad-client="ca-pub-3096725438789562"
          data-ad-slot="1234567890"
          data-ad-format="auto"
          data-full-width-responsive="true"></ins>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-6">
      {categories.map(category => {
        const info = categoryInfo[category];
        return (
          <a
            href={`/${category}`}
            class="block bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow border-l-4 border-blue-500 hover:border-blue-600"
          >
            <div class="text-center">
              <div class="text-4xl mb-4">{info.icon}</div>
              <h2 class="text-xl font-bold mb-2">{info.name}</h2>              <p class="text-gray-600 text-sm">
                {category === 'health' && 'Sağlıklı yaşam ipuçları ve medikal bilgiler'}
                {category === 'love' && 'İlişkiler, aşk ve duygusal bağlar hakkında'}
                {category === 'history' && 'Tarihi olaylar ve kişiler'}
                {category === 'psychology' && 'İnsan davranışları ve zihin'}
                {category === 'space' && 'Uzay bilimleri ve astronomi'}
                {category === 'quotes' && 'İlham verici sözler ve alıntılar'}
                {category === 'astrology' && 'Burç yorumları ve astroloji rehberleri'}
                {category === 'art' && 'Sanat eserleri ve yaratıcı çalışmalar'}
                {category === 'cinema' && 'Film önerileri ve sinema dünyası'}
                {category === 'technology' && 'Teknolojik gelişmeler ve yenilikler'}
              </p>
            </div>
          </a>
        );
      })}
    </div>
  </div>
</Layout>
